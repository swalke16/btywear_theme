<section class="home_page">
  <div class="athlete-thumbs-container">
    <span class="athlete-title">BTY Athletes</span>

    <div class="athlete-thumbs">
      <a href="pages/athletes" class="athlete-thumb four">
        <img src="{{ 'nikki-ralston-2.jpg' | asset_url }}" data-1x="{{ 'nikki-ralston-2.jpg' | asset_url }}" data-2x="{{ 'nikki-ralston-2-2x.jpg' | asset_url }}" alt="Nikki Ralston" />
        <div class="athlete-name">Nikki Ralston</div>
      </a>

      <a href="pages/athletes" class="athlete-thumb five">
        <img src="{{ 'ron-thomas.jpg' | asset_url }}" data-1x="{{ 'ron-thomas.jpg' | asset_url }}" data-2x="{{ 'ron-thomas-2x.jpg' | asset_url }}" alt="Ron Thomas" />
        <div class="athlete-name">Ron Thomas</div>
      </a>
    </div>

    <div class="athlete-thumbs">
      <a href="pages/athletes" class="athlete-thumb one">
        <img src="{{ 'chris-sansbury.jpg' | asset_url }}" data-1x="{{ 'chris-sansbury.jpg' | asset_url }}" data-2x="{{ 'chris-sansbury-2x.jpg' | asset_url }}" alt="Chris Sansbury" />
        <div class="athlete-name">Chris Sansbury</div>
      </a>

      <a href="pages/athletes" class="athlete-thumb two">
        <img src="{{ 'jenny-borda.jpg' | asset_url }}" data-1x="{{ 'jenny-borda.jpg' | asset_url }}" data-2x="{{ 'jenny-borda-2x.jpg' | asset_url }}" alt="Jenny Borda" />
        <div class="athlete-name">Jenny Borda</div>
      </a>

      <a href="pages/athletes" class="athlete-thumb three">
        <img src="{{ 'tristan-moore.jpg' | asset_url }}" data-1x="{{ 'tristan-moore.jpg' | asset_url }}" data-2x="{{ 'tristan-moore-2x.jpg' | asset_url }}" alt="Tristan Moore" />
        <div class="athlete-name">Tristan Moore</div>
      </a>
    </div>
  </div>

  <div class="homepage-products clearfix">

    <span class="message">Better Than Yesterday</span>

      {% if collections.new-designs.products.size > 0 %}
        {% capture index %}{{ 'now' | date: '%S' | times: collections.new-designs.products.size | divided_by: 60 }}{% endcapture %}

        {% for product in collections.new-designs.products offset:index limit:4 %}
          {% include 'product-display' %}
        {% endfor %}
      {% endif %}

  </div>
</section>

<a class="product {{ product.handle }}" href="{{ product.url }}">
  <img src="{{ product.featured_image | product_img_url: 'large' }}" data-1x="{{ product.featured_image | product_img_url: 'grande' }}" data-2x="{{ product.featured_image | product_img_url: 'master' }}" alt="{{ product.title | escape  }}" />
  <div class="price">{% include 'product-price' %}</div>
  <div class="product_text">{{ product.title }}</div>
</a>
